{
  "name": "bildkompressor",
  "version": "1.0.0",
  "description": "Windows-EXE fÃ¼r Bildkompression mit Express, Cluster, Multer, Sharp und Bull-Queue",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "start:standalone": "node server-standalone.js",
    "dev": "nodemon server-standalone.js",
    "dev:electron": "electron . --dev",
    "build:win": "electron-builder --win",
    "build": "pnpm run build:win",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "keywords": [
    "image",
    "compression",
    "sharp",
    "express",
    "windows",
    "exe",
    "cluster"
  ],
  "author": "Claude Code Assistant",
  "license": "MIT",
  "dependencies": {
    "archiver": "^7.0.1",
    "bull": "^4.12.2",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "redis": "^4.6.10",
    "sharp": "^0.34.4"
  },
  "devDependencies": {
    "electron": "^38.1.2",
    "electron-builder": "^26.0.12",
    "nodemon": "^3.0.2",
    "pkg": "^5.8.1"
  },
  "pkg": {
    "assets": [
      "public/**/*"
    ],
    "targets": [
      "node18-win-x64"
    ],
    "outputPath": "dist"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "build": {
    "appId": "com.bildkompressor.app",
    "productName": "Bildkompressor",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "main.js",
      "public/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/favicon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Bildkompressor"
    }
  }
}